type Post {
    id: ID!
    title: String!
    category: String
    author: Author!
}

type Author {
    id: ID!
    name: String!
    posts: [Post]!
}

type Query {
    recentPosts(count: Int, offset: Int): [Post]!
}

type Mutation {
    writePost(title: String!, category: String, authorId: String!) : Post!
}
